---
import '../styles/reset.css';
import '../styles/style.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PoemsSection from '../components/PoemsSection.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">

<title>chromatographics</title>
<meta name="description" content="gay poems by mb bischoff">

<!-- Facebook Meta Tags -->
<meta property="og:url" content="https://chromato.graphics">
<meta property="og:type" content="website">
<meta property="og:title" content="{title}">
<meta property="og:description" content="gay poems by mb bischoff">
<meta property="og:image" content="/opengraph.png">

<!-- Twitter Meta Tags -->
<meta name="twitter:card" content="summary_large_image">
<meta property="twitter:domain" content="chromato.graphics">
<meta property="twitter:url" content="https://chromato.graphics">
<meta name="twitter:title" content="{title}">
<meta name="twitter:description" content="gay poems by mb bischoff">
<meta name="twitter:image" content="/opengraph.png">

<link rel="alternate" type="application/rss+xml" title="RSS" href="/rss.xml">

<body>
  <Header />

  <main>
    <PoemsSection />
      <slot />
    </PoemsSection>
  </main>
  <Footer />
</body>
</html> 