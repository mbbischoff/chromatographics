---
import '../styles/reset.css';
import '../styles/style.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PoemsSection from '../components/PoemsSection.astro';

export interface Props {
  title: string;
  ogTitle?: string;
  ogDescription?: string;
  ogImage?: string;
  ogUrl?: string;
}

const { 
  title, 
  ogTitle = 'chromatographics',
  ogDescription = 'gay poems by mb bischoff',
  ogImage = '/opengraph.png',
  ogUrl = 'https://chromato.graphics'
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">

<title>{title || 'chromatographics'}</title>
<meta name="description" content={ogDescription}>

<!-- Facebook Meta Tags -->
<meta property="og:url" content={ogUrl}>
<meta property="og:type" content="website">
<meta property="og:title" content={ogTitle}>
<meta property="og:description" content={ogDescription}>
<meta property="og:image" content={ogImage.startsWith('http') ? ogImage : `/${ogImage}`}>

<!-- Twitter Meta Tags -->
<meta name="twitter:card" content="summary_large_image">
<meta property="twitter:domain" content="chromato.graphics">
<meta property="twitter:url" content={ogUrl}>
<meta name="twitter:title" content={ogTitle}>
<meta name="twitter:description" content={ogDescription}>
<meta name="twitter:image" content={ogImage.startsWith('http') ? ogImage : `/${ogImage}`}>

<link rel="alternate" type="application/rss+xml" title="RSS" href="/rss.xml">

<body>
  <Header />

  <main>
    <PoemsSection />
      <slot />
    </PoemsSection>
  </main>
  <Footer />
</body>
</html> 