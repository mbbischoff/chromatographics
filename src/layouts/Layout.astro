---
import '../styles/reset.css';
import '../styles/style.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PoemsSection from '../components/PoemsSection.astro';
import { getEntry } from 'astro:content';

export interface Props {
  title: string;
  ogTitle?: string;
  ogDescription?: string;
  ogImage?: string;
  ogUrl?: string;
}

const { title, ogTitle, ogDescription, ogImage, ogUrl } = Astro.props;

// Get about entry for default OG values
const aboutEntry = await getEntry('pages', 'about');
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">

<title>chromatographics</title>
<meta name="description" content="gay poems by mb bischoff">

<!-- Facebook Meta Tags -->
<meta property="og:url" content={ogUrl || "https://chromato.graphics"}>
<meta property="og:type" content="website">
<meta property="og:title" content={ogTitle || "chromatographics"}>
<meta property="og:description" content={ogDescription || "gay poems by mb bischoff"}>
<meta property="og:image" content={ogImage || "/opengraph.png"}>

<!-- Twitter Meta Tags -->
<meta name="twitter:card" content="summary_large_image">
<meta property="twitter:domain" content="chromato.graphics">
<meta property="twitter:url" content={ogUrl || "https://chromato.graphics"}>
<meta name="twitter:title" content={ogTitle || "chromatographics"}>
<meta name="twitter:description" content={ogDescription || "gay poems by mb bischoff"}>
<meta name="twitter:image" content={ogImage || "/opengraph.png"}>

<link rel="alternate" type="application/rss+xml" title="RSS" href="/rss.xml">

<body>
  <Header />

  <main>
    <PoemsSection />
      <slot />
    </PoemsSection>
  </main>
  <Footer />
</body>
</html> 