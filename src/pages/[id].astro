---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import Poem from '../components/Poem.astro';

export async function getStaticPaths() {
  const poems = await getCollection('poems');
  return poems.map((poem: CollectionEntry<'poems'>) => ({
    params: { id: poem.slug },
    props: { poem },
  }));
}

const { poem }: { poem: CollectionEntry<'poems'> } = Astro.props;

// Get first few lines for description
const lines = poem.body.split('\n').filter(line => line.trim());
const description = lines.slice(0, 2).join(' ').substring(0, 160) || 'A poem by mb bischoff';
---

<Layout 
  title={plainTitle}
  ogTitle={poem.data.title}
  ogDescription={description}
  ogImage={`/og/${poem.slug}.png`}
  ogUrl={`https://chromato.graphics/${poem.slug}`}
>
  <Poem poem={poem} isPermalink={true} />
</Layout> 